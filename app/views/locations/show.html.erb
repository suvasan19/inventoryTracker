<%= render @location %>

<h3>Associated Inventory</h3>
<% if !@inventory.empty? %>
  <%= render 'items/table', items: @inventory %>
<% else %>
  <p>No Associated Items</p>
<% end %>


<div>
  <%= link_to "Back to Locations", locations_path, class: "btn btn-warning p-1" %>
  <%= link_to "Edit", edit_location_path(@location), class: "btn btn-primary p-1" %>

  <%= button_to "Delete", @location, method: :delete, class: "btn btn-danger mt-1" %>

</div>
